{
  "kind": "singleType",
  "collectionName": "styles",
  "info": {
    "singularName": "style",
    "pluralName": "styles",
    "displayName": "Styles",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "mainColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color",
      "default": "#000000"
    },
    "secondaryColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color",
      "default": "#FFFFFF"
    },
    "defaultFont": {
      "type": "enumeration",
      "enum": [
        "Roboto (sans serif)",
        "Open Sans (sans serif)",
        "Montserrat (sans serif)",
        "Lato (sans serif)",
        "Roboto Condensed (sans serif)",
        "Barlow Condensed (sans serif)",
        "Saira Condensed (sans serif)",
        "Merriweather (serif)",
        "PT Serif (serif)",
        "EB Garamond (serif)",
        "Dancing Script (handwriting)",
        "Pacifico (handwriting)",
        "Caveat (handwriting)",
        "Permanent Marker (handwriting)",
        "Satisfy (handwriting)"
      ],
      "required": true
    },
    "homePageBackground": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "thumbnailsPerRow": {
      "type": "integer",
      "default": 3,
      "required": true,
      "min": 1
    },
    "gap": {
      "type": "integer",
      "required": true,
      "default": 20,
      "min": 0
    },
    "thumbnailsRatio": {
      "type": "string",
      "regex": "^[0-9]+/[0-9]+$",
      "required": true,
      "default": "1/1"
    }
  }
}
