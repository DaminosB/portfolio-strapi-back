{
  "collectionName": "components_module_containers",
  "info": {
    "displayName": "Container",
    "description": "",
    "icon": "dashboard"
  },
  "options": {},
  "attributes": {
    "medias": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "gap": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "imagesPerRow": {
      "type": "integer",
      "required": true,
      "default": 1,
      "min": 0
    },
    "backgroundImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "backgroundColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "text": {
      "type": "component",
      "repeatable": false,
      "component": "constructors.text-only"
    }
  }
}
